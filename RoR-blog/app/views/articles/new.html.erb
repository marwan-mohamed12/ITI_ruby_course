<h1>New Article</h1>

<%= form_with model: @article do |form|%> %>

<div>
    <%= form.lable :title %> <br>
    <%= form.text_field :title %> <br>
    <%= @article.errors.full_message_for(:title).each do |message|%>
        <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.lable :body%> <br>
    <%= form.text_field :body%>
    <%= @article.errors.full_message_for(:body).each do |message|%>
        <div><%= message %></div>
    <% end %>
</div>

<div>
    <%= form.submit %>
</div>

<% end %>